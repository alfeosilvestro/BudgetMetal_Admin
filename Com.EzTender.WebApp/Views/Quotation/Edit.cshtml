<script>
    $(function () {
        loadUser();
        loadRole();
    });


    $("#btnSubmit").click(function () {
        $("#btnType").val("submit");
        SaveForm();
    });

    $("#btnDraft").click(function () {
        $("#btnType").val("draft");
        SaveForm();
    });
    
    function SaveForm() {

        var isValid = true;
        isValid = $("form#frmCreateQuotation").valid();
        if (isValid) {
            $('.page-loader-wrapper').fadeIn();
            $("#frmCreateQuotation").submit();
        } else {
            alert("Please fill all fields!")
        }
    }

    function calculateTotal(id, item) {
        var unitprice = $("#" + item + "_txtUnitPrice_" + id).val();
        var qty = $("#" + item + "_hdQty_" + id).val();
        if (isNaN(unitprice) || isNaN(qty)) {
            alert("Please type numbe in price");
            $("#" + item + "_txtUnitPrice_" + id).select();
        } else {
            var total = parseFloat(unitprice) * parseInt(qty);
            $("#" + item + "_hdItemAmount_" + id).val(total.toFixed(2));
        }
    }

    function loadUser() {
        var ajaxurl = '@Url.Action("GetActiveUserByCompany", "Rfq")';

        $('#ddlUser').append($('<option>', {
            value: 0,
            text: '--Select User--'
        }));

        $.ajax({
            url: ajaxurl,
            data: { CompanyId: @Model.Document.Company_Id},
            dataType: 'json',
            success: function (response) {
                console.log(response);
                var obj = response;
                for (var k in obj) {
                    var item = obj[k];
                    $('#ddlUser').append($('<option>', {
                        value: item.Id,
                        text: item.ContactName
                    }));
                }
                $("#ddlUser").selectpicker('refresh');

            },
            error: function (response) {
                alert(response)
            }

        });
    }

    $("#btnAddUser").click(function () {
        var userId = $("#ddlUser").val();
        var userName = $("#ddlUser option:selected").text();
        var roleId = $("#ddlRole").val();

        if (userId == 0 ) {
            alert("Please select the user");
        } else {
            var isExistingUser = false;
            $('#userSettingTable > tbody  > tr > td > input[name="documentUserId[]"]').each(function () {
                if (userId == $(this).val()) {
                    alert("User is already exist in list.");
                    isExistingUser = true;
                }
            });
            if (isExistingUser == false) {
                if (roleId == null) {
                    alert("Please select the role(s)");
                } else {
                    var tmptag = "<tr><td>" +
                        "<input type='hidden' name='documentUserId[]' value='" + userId + "' />" +
                        "<h5> " + userName + " </h5>" +
                        "<input type='hidden' name='documentUserRole[]' value='" + roleId + "' />";
                    $("#ddlRole option:selected").each(function () {
                        var $this = $(this);
                        if ($this.length) {
                            var selText = $this.text();
                            tmptag = tmptag + "<span class='label bg-deep-purple'> " + selText +" </span>&nbsp;  ";
                        }
                    });
                    tmptag = tmptag + "</td><td><button type='button' class='btn btn-danger waves-effect'  onclick='RemoveUserRow(this)'>Remove</button></td>";
                    tmptag = tmptag + "</tr>";
                    $("#userSettingTable > tbody").append(tmptag);
                    $("#ddlUser").val(0);
                    $("#ddlUser").selectpicker('refresh');
                    $("#ddlRole").val(0);
                    $("#ddlRole").selectpicker('refresh');
                }
            }
        }
    });

    function RemoveUserRow(item) {
        $(item).parent().parent().remove();
    }

    function loadRole() {
        var ajaxurl = '@Url.Action("GetActiveRoles", "Quotation")';

         $.ajax({
            url: ajaxurl,
            dataType: 'json',
            success: function (response) {
                //console.log(response);
                var obj = response;
                for (var k in obj) {
                    var item = obj[k];
                    $('#ddlRole').append($('<option>', {
                        value: item.Id,
                        text: item.Name
                    }));

                }
                $("#ddlRole").selectpicker('refresh');

            },
            error: function (response) {
                alert(response)
            }

        });
    }

    $(".btn_download").on("click", function () {

        var fileId = $(this).data('fileid');
         var ajaxurl = '@Url.Action("AttachmentDownload", "Rfq")';
        var url = ajaxurl+ "?fileid=" + fileId;
        $('#iframe_download_file').attr('src', url)
        //alert('download - ' + $('#iframe_download_file').attr('src'));

    });
</script>

