                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="5%">Serial</th>
                                        <th width="30%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        @*<th width="20%">Internal Reference Code</th>*@
                                        <th width="10%">Unit Price</th>
                                        <th width="10%">Quantity</th>
                                        <th width="10%">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countProductPricing = 1;
                                        if (Model.QuotationPriceSchedule != null)
                                        {
                                            int i = 0;
                                            var productList = Model.QuotationPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Product).ToList();
                                            foreach (var item in productList)
                                            {
                                                <tr>
                                                    <td>@countProductPricing</td>
                                                    <td>@item.ItemName <input type="hidden" name="QuotationPriceSchedule[@i].ItemName" class="form-control" value="@item.ItemName" /></td>
                                                    <td>@item.ItemDescription <input type="hidden" name="QuotationPriceSchedule[@i].ItemDescription" class="form-control" value="@item.ItemDescription" /></td>
                                                    @*<td>@item.InternalRefrenceCode <input type="hidden" name="QuotationPriceSchedule[@i].InternalRefrenceCode" class="form-control" value="@item.InternalRefrenceCode" /></td>*@
                                                    <td> @item.UnitPrice <input type="hidden" name="QuotationPriceSchedule[@i].UnitPrice" class="form-control" value="@item.UnitPrice" /></td>
                                                    <td>@item.QuantityRequired <input type="hidden" name="QuotationPriceSchedule[@i].QuantityRequired" class="form-control" value="@item.QuantityRequired" /></td>
                                                    <td> @item.ItemAmount <input type="hidden" name="QuotationPriceSchedule[@i].ItemAmount" class="form-control" value="@item.ItemAmount" /></td>
                                                </tr>
                                                countProductPricing++;
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            <h4>Service Pricing</h4>
                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="5%">Serial</th>
                                        <th width="30%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        @*<th width="20%">Internal Reference Code</th>*@
                                        <th width="10%">Unit Price</th>
                                        <th width="10%">Quantity</th>
                                        <th width="10%">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countServicePricing = 1;
                                        if (Model.QuotationPriceSchedule != null)
                                        {
                                            int i = 0;
                                            var serviceList = Model.QuotationPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Service).ToList();
                                            foreach (var item in serviceList)
                                            {
                                                <tr>
                                                    <td>@countServicePricing</td>
                                                    <td>@item.ItemName <input type="hidden" name="QuotationPriceSchedule[@i].ItemName" class="form-control" value="@item.ItemName" /></td>
                                                    <td>@item.ItemDescription <input type="hidden" name="QuotationPriceSchedule[@i].ItemDescription" class="form-control" value="@item.ItemDescription" /></td>
                                                    @*<td>@item.InternalRefrenceCode <input type="hidden" name="QuotationPriceSchedule[@i].InternalRefrenceCode" class="form-control" value="@item.InternalRefrenceCode" /></td>*@
                                                    <td> @item.UnitPrice <input type="hidden" name="QuotationPriceSchedule[@i].UnitPrice" class="form-control" value="@item.UnitPrice" /></td>
                                                    <td>@item.QuantityRequired <input type="hidden" name="QuotationPriceSchedule[@i].QuantityRequired" class="form-control" value="@item.QuantityRequired" /></td>
                                                    <td> @item.ItemAmount <input type="hidden" name="QuotationPriceSchedule[@i].ItemAmount" class="form-control" value="@item.ItemAmount" /></td>
                                                </tr>
                                                countServicePricing++;
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <h4>Warranty Pricing</h4>
                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="5%">Serial</th>
                                        <th width="30%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        @*<th width="20%">Internal Reference Code</th>*@
                                        <th width="10%">Unit Price</th>
                                        <th width="10%">Quantity</th>
                                        <th width="10%">Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countWarrantyPricing = 1;
                                        if (Model.QuotationPriceSchedule != null)
                                        {
                                            int i = 0;
                                            var warrantyList = Model.QuotationPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Warranty).ToList();
                                            foreach (var item in warrantyList)
                                            {
                                                <tr>
                                                    <td>@countWarrantyPricing</td>
                                                    <td>@item.ItemName <input type="hidden" name="QuotationPriceSchedule[@i].ItemName" class="form-control" value="@item.ItemName" /></td>
                                                    <td>@item.ItemDescription <input type="hidden" name="QuotationPriceSchedule[@i].ItemDescription" class="form-control" value="@item.ItemDescription" /></td>
                                                    @*<td>@item.InternalRefrenceCode <input type="hidden" name="QuotationPriceSchedule[@i].InternalRefrenceCode" class="form-control" value="@item.InternalRefrenceCode" /></td>*@
                                                    <td> @item.UnitPrice <input type="hidden" name="QuotationPriceSchedule[@i].UnitPrice" class="form-control" value="@item.UnitPrice" /></td>
                                                    <td>@item.QuantityRequired <input type="hidden" name="QuotationPriceSchedule[@i].QuantityRequired" class="form-control" value="@item.QuantityRequired" /></td>
                                                    <td> @item.ItemAmount <input type="hidden" name="QuotationPriceSchedule[@i].ItemAmount" class="form-control" value="@item.ItemAmount" /></td>
                                                </tr>
                                                i++;
                                                countWarrantyPricing++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="attachments">

                            <table id="attachmentTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">File Name</th>
                                        <th width="70%">Description</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.Attachment != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.Document.Attachment)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name="Document.Attachment[@i].Id" value="@item.Id" />

                                                        <a href="#" class="btn_download" data-fileid="@item.Id">@item.FileName</a>
                                                    </td>
                                                    <td>@item.Description"</td>


                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>

                            </table>
                            <iframe id="iframe_download_file" style="display:none" src=""></iframe>

                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="settings">


                            <table id="userSettingTable" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th width="95%">Accessible User(s)</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.DocumentUserDisplay != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.Document.DocumentUserDisplay)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name='documentUserId[]' value="@item.User_Id" />
                                                        <h5>@item.UserName</h5>
                                                        <input type='hidden' name='documentUserRole[]' value='@item.Roles_Id' />
                                                        @{
                                                            foreach (string tmpRole in item.Roles)
                                                            {

                                                                <span class='label bg-deep-purple'>@tmpRole</span>
                                                            }
                                                        }

                                                    </td>


                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>

                        <div role="tabpanel" class="tab-pane fade in" id="DocumentActivity">

                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Action</th>
                                        <th width="35%">Created By</th>
                                        <th width="20%">Created Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.DocumentActivityList != null)
                                        {

                                            foreach (var item in Model.Document.DocumentActivityList)
                                            {
                                                <tr>
                                                    <td>@item.Action </td>
                                                    <td>@item.CreatedBy</td>
                                                    <td>@item.CreatedDate</td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <input type="hidden" id="loadinvitedsupplier" value="0" />
                    @{
                        if (Code_C_Buyer == currentCompanyType)
                        {
                            if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_Quotation_Submitted && ViewBag.CompanyAdmin)
                            {
                                <a class="btn btn-success" id="btnAccept" href='#'>Accept</a>
                                <a class="btn btn-danger" id="btnReject" href='#'>Reject</a>
                            }
                        }
                        else
                        {
                            if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_Quotation_Draft)
                            {
                                if (ViewBag.CompanyAdmin == true || ViewBag.DocumentOwner == true)
                                {
                                    <a class="btn btn-warning" href='@Url.Action("Edit","Quotation",new { id= Model.Id })'>Edit Quotation</a>
                                }
                                <button type="button" id="btnCancel" class="btn btn-danger">Cancel</button>
                            }
                            else if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_Quotation_Submitted)
                            {
                                <button type="button" id="btnCancel" class="btn btn-danger">Cancel</button>
                            }
                        }
                    }

                </div>
            </div>
        </div>
    </div>
</form>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Clarification
                </h2>
            </div>
            <div class="body">
                @{
                    if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_Quotation_Submitted && Code_C_Buyer == currentCompanyType)
                    {
                        <div class="row clearfix">
                            <div class="col-sm-11">
                                <div class="form-group">
                                    <label for="txtComment">Comment</label>
                                    <div class="form-line">
                                        <textarea class="form-control" id="txtComment" placeholder="Please type comment here"></textarea>
                                    </div>
                                </div>

                            </div>
                            <div class="col-sm-1">
                                <br />
                                <button type="button" id="btnAddComment" class="btn btn-primary"> Send </button>
                            </div>
                        </div>
                    }
                }


                <div class="row clearfix">
                    <div class="col-sm-12" id="divClarificationList">
                        @{
                            if (Model.Document.ClarificationList != null)
                            {
                                foreach (var item in Model.Document.ClarificationList.Where(e => e.Clarification_Id == 0).ToList())
                                {
                                    var listReply = Model.Document.ClarificationList.Where(e => e.Clarification_Id == item.Id).ToList();
                                    <div class='row' style='border:solid 1px;padding-top:10px;' id='rowClarification_@(item.Id)'>
                                        <div class='col-sm-3' id='headerClarification_@(item.Id)'>
                                            <strong> @(item.User.UserName) </strong> <br /><br />
                                            <span class='text-success' id='replyCount_@(item.Id)'><strong>@(listReply.Count) Reply</strong></span><input type='hidden' id='hdReplyCount_@(item.Id)' value='@(listReply.Count)'>
                                        </div>
                                        <div class='col-sm-8' id='bodyClarification_@(item.Id)'>
                                            <div class='col-sm-12' id='questionClarification_@(item.Id)'>
                                                <div id='comment_@(item.Id)'>  @item.ClarificationQuestion</div>
                                                <br> <button type='button' class='btn btn-default' onclick='AddReplyPanel( @(item.Id))'>Reply</button>
                                            </div>
                                            <div class='col-sm-12' id='replyClarification_@(item.Id)'>
                                                @{
                                                    foreach (var replyItem in listReply)
                                                    {
                                                        <div class='col-sm-11 pull-right'>
                                                            <hr>
                                                            <div>
                                                                @(replyItem.ClarificationQuestion)
                                                            </div><br>
                                                            <span>Replied by <strong> @(replyItem.User.UserName) </strong> On  @(replyItem.CreatedDate)  </span>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                            <div class='col-sm-12' id='pnlReplyClarification_@(item.Id)'></div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
