    function AddReply(id) {
        var replyMessage = $("#txtReply_" + id).val();
        var ajaxurl = '@Url.Action("ReplyComment", "Quotation")';
        if (replyMessage == "") {
        alert("Reply field is required!");
        $("#txtReply_" + id).focus();
        return false;
    }
