
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Empty_Layout.cshtml";
}



<section>
    <div class="row">
        <div class="card">
            <div class="header">
                <strong>Reset Password TEST</strong>
            </div>
            <div class="body">
                <div class="row" id="resetPassword">
                    <div class="col-sm-3">
                        <label for="email">Please Enter Username :</label> 
                    </div>
                    <div class="col-sm-4">
                        <input type="text" name="username" id="username" value="" class="form-control" />
                        <br />
                        <button class="btn btn-primary" id="btnResetPassword"> Reset Password</button>
                    </div>
                    <div class="col-sm-5">
                        
                    </div>
                </div>
                <div class="row" id="messageToUser">

                </div>
            </div>
        </div>
    </div>
</section>
<script>
    $("#btnResetPassword").click(function () {
        var un = $("#username").val();
        var ajaxurl = '@Url.Action("ResetPassword", "Registration")';

        $.ajax({
            url: ajaxurl,
            data: { Username: un},
            dataType: 'json',
            success: function (response) {
                console.log(response);
                $("#messageToUser").empty();
                var message = "";
                if (response.IsSuccess == true) {
                    message = "<div class='alert alert-success'> You have successfully reset password. Please check your username ("+ un +").</div>";
                    $("#resetPassword").hide();
                } else {
                    message = "<div class='alert alert-danger'> " + un + " is invalid.</div>";
                    $("#username").select();
                }
                $("#messageToUser").append(message);
            },
            error: function (response) {
                //alert(response)
                console.log(response);
            }
        });
        //alert(email);
    });
</script>