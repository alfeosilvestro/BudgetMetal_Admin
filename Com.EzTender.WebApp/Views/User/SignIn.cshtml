@model Com.BudgetMetal.ViewModels.Sys_User.VM_Sys_User_Sign_In
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer _localizer;


@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Empty_Layout.cshtml";
}

<div class="login-box">
    <div class="row">
        <div class="col-sm-6 col-md-offset-3">
            <div class="card">
                <div class="body">
                    <form asp-action="SignIn" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="msg"> @(_localizer["Sign in to start your session"]) </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">mail</i>
                            </span>
                            <div class="form-line">
                                <input type="text" asp-for="UserName" class="form-control" placeholder="@(_localizer["Username"])" required autofocus />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">
                                <input type="password" asp-for="Password" class="form-control" placeholder="@(_localizer["Password"])" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8 p-t-5">
                                <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                                <label for="rememberme">Remember Me</label>
                            </div>
                            <div class="col-xs-4">
                                <button class="btn btn-block bg-pink waves-effect" type="submit">@(_localizer["Sign In"])</button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <span class="text-danger">@ViewBag.ErrorMessage</span>
                            </div>
                        </div>
                        <div class="row m-t-15 m-b--20">
                            <div class="col-xs-6">
                                <a href="@TempData["RegisterUrl"]" target="_parent">@(_localizer["Register Now!"])</a>
                            </div>
                            <div class="col-xs-6 align-right">
                                <a href="@TempData["ForgotPasswordUrl"]" target="_parent">@(_localizer["Forgot Password?"])</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>