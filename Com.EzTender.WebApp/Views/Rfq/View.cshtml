                    <input type="hidden" id="loadinvitedsupplier" value="0" />
                    @{
                        if (Code_C_Buyer != currentCompanyType)
                        {
                            <a class="btn btn-success" id="btnCreateQuotation" href='@Url.Action("Create","Quotation",new { id= Model.Id })'>Register &amp; Interest</a>
                            <button type="button" class="btn btn-danger" id="btnNotRelevant">Not Relevant</button>
                            <div id="divViewQuotionForSupplier"></div>
                        }
                        else
                        {
