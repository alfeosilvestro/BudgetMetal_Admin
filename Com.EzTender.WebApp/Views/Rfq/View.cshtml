                                <thead>
                                    <tr>
                                        <th width="5%">Serial</th>
                                        <th width="30%">Item Name</th>
                                        <th width="40%">Item Description</th>
                                        @*<th width="20%">Internal Reference Code</th>*@
                                        <th width="20%">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countPriceService = 1;
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            var serviceList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Service).ToList();

                                            foreach (var item in serviceList)
                                            {
                                                <tr>
                                                    <td>@countPriceService</td>
                                                    <td>@item.ItemName </td>
                                                    <td>@item.ItemDescription</td>
                                                    @*<td>@item.InternalRefrenceCode</td>*@
                                                    <td>@item.QuantityRequired</td>
                                                </tr>
                                                countPriceService++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            <h4>Warranty Pricing</h4>
                            <table id="pricingWarrantyTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="5%">Serial</th>
                                        <th width="30%">Item Name</th>
                                        <th width="40%">Item Description</th>
                                        @*<th width="20%">Internal Reference Code</th>*@
                                        <th width="15%">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countPriceWarranty = 1;
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            var warrantyList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Warranty).ToList();
                                            foreach (var item in warrantyList)
                                            {
                                                <tr>
                                                    <td>@countPriceWarranty</td>
                                                    <td>@item.ItemName </td>
                                                    <td>@item.ItemDescription</td>
                                                    @*<td>@item.InternalRefrenceCode</td>*@
                                                    <td>@item.QuantityRequired</td>
                                                </tr>
                                                countPriceWarranty++;

                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            @{
                                if (Code_C_Buyer == currentCompanyType)
                                {
                                    <button class="btn btn-default waves-effect m-r-20" id="btnComparePricing" type="button">Price Comparison</button>
                                }
                            }



                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="invited_suppliers">
                            <div class="row">
                                <div class="col-sm-3">
                                    <select id="ddlIndustry" class="form-control selectpicker" disabled></select>
                                    <input type="hidden" asp-for="IndustryOfRfq" id="hdIndustry" />
                                </div>
                                <div class="col-sm-8">
