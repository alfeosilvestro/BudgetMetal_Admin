@model Com.BudgetMetal.ViewModels.Rfq.VmRfqItem
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string currentCompanyType = Context.Session.GetString("C_BusinessType");
    string Code_C_Buyer = Com.BudgetMetal.Common.Constants_CodeTable.Code_C_Buyer.ToString();
    string UserName = Context.Session.GetString("UserName");
}
<form asp-controller="Rfq" asp-action="View" method="post" enctype="multipart/form-data" id="frmCreateRFQ">
    <div class="block-header">
        <h2>Prepare Request for Quotation</h2>
    </div>
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        General Information
                    </h2>
                </div>
                <div class="body">
                    <div class="row clearfix">
                        <div class="col-sm-4">
                            <label for="quote_no">RFQ Reference</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Document.DocumentNo" readonly class="form-control" placeholder="<Auto Generate by System>">
                                    <input type="hidden" asp-for="Document.DocumentStatus_Id">
                                    <input type="hidden" asp-for="Document.DocumentType_Id">
                                    <input type="hidden" asp-for="Document.Company_Id">
                                    <input type="hidden" asp-for="Document.CreatedBy">
                                    <input type="hidden" asp-for="Document.UpdatedBy">
                                    <input type="hidden" asp-for="CreatedBy">
                                    <input type="hidden" asp-for="CreatedDate">
                                    <input type="hidden" asp-for="Document.CreatedDate">
                                    <input type="hidden" asp-for="UpdatedBy">
                                    <input type="hidden" name="Id" id="RfqId" value="@Model.Id">
                                    <input type="hidden" asp-for="Document_Id">
                                    <input type="hidden" asp-for="Document.Id">
                                    <input type="hidden" asp-for="IsActive" />
                                    <input type="hidden" asp-for="Document.IsActive" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="quote_no">Title</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Document.Title" class="form-control" placeholder="Project Title" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label for="status">Status</label>
                            <h4><span class="label label-info">@Model.Document.DocumentStatus.Name</span></h4>
                        </div>
                        <div class="col-sm-6">
                            <label for="quote_no">Internal Reference No</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="InternalRefrenceNo" class="form-control" placeholder="Internal Reference">
                                    <span asp-validation-for="InternalRefrenceNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="quote_no">Internal Project Name</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="InternalProjectName" class="form-control" placeholder="Internal Project Name">
                                    <span asp-validation-for="InternalProjectName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- #END# Input -->
    <!-- Tabs -->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation" class="active"><a href="#basic_requirements" data-toggle="tab">Info</a></li>
                        <li role="presentation"><a href="#detailed_requirements" data-toggle="tab">Requirements</a></li>
                        <li role="presentation"><a href="#service_level_agreement" data-toggle="tab">Supports</a></li>
                        <li role="presentation"><a href="#penalty" data-toggle="tab">Commercials</a></li>
                        <li role="presentation"><a href="#pricing" data-toggle="tab">Pricing</a></li>
                        <li role="presentation"><a href="#attachments" data-toggle="tab">Attachments</a></li>

                        @{
                            if (Code_C_Buyer == currentCompanyType)
                            {
                                <li role="presentation"><a href="#settings" data-toggle="tab">Roles</a></li>
                                <li role="presentation" id="tabinvited_suppliers"><a href="#invited_suppliers" data-toggle="tab">Invite Suppliers</a></li>
                                <li role="presentation"><a href="#DocumentActivity" data-toggle="tab">Activities</a></li>
                            }

                        }

                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="basic_requirements">

                            <div class="row clearfix">
                                <div class="col-sm-3">
                                    <label for="StartRfqdate">Start RFQ Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="StartRfqdate" class="form-control" placeholder="Start RFQ Date">
                                            <span asp-validation-for="StartRfqdate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <label for="ValidRfqdate">Valid RFQ Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="ValidRfqdate" class="form-control" placeholder="End RFQ Date">
                                            <span asp-validation-for="ValidRfqdate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <label for="quote_no">Estimated Project Start Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="EstimatedProjectStartDate" class="form-control" placeholder="Start of Project Delivery">
                                            <span asp-validation-for="EstimatedProjectStartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <label for="EstimatedProjectEndDate">Estimated Project End Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="EstimatedProjectEndDate" class="form-control" placeholder="End of Project Delivery">
                                            <span asp-validation-for="EstimatedProjectEndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <label for="QuotationOpeningDate">Quotation Opening Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="QuotationOpeningDate" class="form-control datepicker" placeholder="Quotation Opening Date">
                                            <span asp-validation-for="QuotationOpeningDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <label for="quote_no">Contract Value</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="ContractValue" class="form-control" placeholder="Contract Value">
                                            <span asp-validation-for="ContractValue" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                @*<div class="col-sm-3">
                                        <input type="checkbox" asp-for="SupplierProvideMaterial" class="chk-col-red" disabled />
                                        <label for="SupplierProvideMaterial">Supplier to Provide Materials</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="checkbox" asp-for="SupplierProvideTransport" class="chk-col-red" disabled />
                                        <label for="SupplierProvideTransport">Supplier to Provide Transport</label>
                                    </div>*@
                                <div class="col-sm-3">
                                    <input type="checkbox" asp-for="IsPublic" class="chk-col-red" disabled />
                                    <label for="IsPublic">Public</label>
                                    <a href="#" data-toggle="modal" data-target="#publicModal"><span class="badge bg-light-blue">i</span></a>
                                </div>
                                <div class="col-sm-3">
                                    <input type="checkbox" asp-for="SupplierProvideInstallationService" class="chk-col-red" disabled />
                                    <label for="SupplierProvideInstallationService">Supplier Provide Installation Service</label>


                                </div>
                                <div class="col-sm-6">
                                    &nbsp;
                                </div>
                                <div class="col-sm-12">
                                    <label>Messages to Suppliers</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <textarea rows="3" asp-for="MessageToSupplier" class="form-control no-resize" placeholder="Messages to Suppliers" readonly></textarea>
                                            <span asp-validation-for="MessageToSupplier" class="text-danger"></span>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="detailed_requirements">

                            <table id="requirementsTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="40%">Service Name</th>
                                        <th width="50%">Description</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Requirement != null)
                                        {
                                            foreach (var item in Model.Requirement)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.ServiceName
                                                    </td>
                                                    <td>
                                                        @item.Description
                                                    </td>

                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>

                            </table>
                            @{
                                if (Code_C_Buyer == currentCompanyType)
                                {
                                    <button class="btn btn-default waves-effect m-r-20" type="button" data-target="#requirementCompareModal" data-toggle="modal">Requirement Comparison</button>
                                }
                            }

                            <div tabindex="-1" class="modal fade in" id="requirementCompareModal" role="dialog" aria-labelledby="requirementCompareModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="largeModalLabel">Requirement Comparison</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-striped">
                                                    <thead>
                                                        <tr>
                                                            <td></td>
                                                            @{
                                                                if (Model.Requirement != null)
                                                                {
                                                                    foreach (var item in Model.Requirement)
                                                                    {
                                                                        <td>@item.ServiceName</td>
                                                                    }
                                                                }
                                                            }
                                                        </tr>

                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            if (Model.RequirementComparison != null)
                                                            {
                                                                foreach (var item in Model.RequirementComparison)
                                                                {
                                                                    <tr>
                                                                        @{
                                                                            foreach (var subitem in item)
                                                                            {
                                                                                <td>@subitem</td>
                                                                            }
                                                                        }
                                                                    </tr>
                                                                }
                                                            }
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-link waves-effect" type="button" data-dismiss="modal">CLOSE</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="service_level_agreement">
                            <table id="slaTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="40%">Service Name</th>
                                        <th width="50%">Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Sla != null)
                                        {
                                            foreach (var item in Model.Sla)
                                            {
                                                <tr>
                                                    <td>@item.Requirement
                                                    <td>@item.Description</td>

                                                </tr>

                                            }
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="penalty">

                            <table id="penaltyTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="40%">Service Name</th>
                                        @*<th width="20%">Milestone</th>*@
                                        <th width="45%">Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Penalty != null)
                                        {

                                            foreach (var item in Model.Penalty)
                                            {
                                                <tr>
                                                    <td>@item.BreachOfServiceDefinition</td>
                                                    @*<td>@item.PenaltyAmount</td>*@
                                                    <td>@item.Description</td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>

                            </table>

                        </div>

                        <div role="tabpanel" class="tab-pane fade in" id="pricing">
                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        <th width="20%">Internal Reference Code</th>
                                        <th width="10%">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            var productList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Product).ToList();
                                            foreach (var item in productList)
                                            {
                                                <tr>
                                                    <td>@item.ItemName </td>
                                                    <td>@item.ItemDescription</td>
                                                    <td>@item.InternalRefrenceCode</td>
                                                    <td>@item.QuantityRequired</td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            <table id="pricingServiceTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        <th width="20%">Internal Reference Code</th>
                                        <th width="10%">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            var serviceList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Service).ToList();
                                            
                                            foreach (var item in serviceList)
                                            {
                                                <tr>
                                                    <td>@item.ItemName </td>
                                                    <td>@item.ItemDescription</td>
                                                    <td>@item.InternalRefrenceCode</td>
                                                    <td>@item.QuantityRequired</td>

                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            <table id="pricingWarrantyTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        <th width="20%">Internal Reference Code</th>
                                        <th width="10%">Quantity</th>
                                    </tr>
                                </thead>    
                                <tbody>
                                    @{
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            var warrantyList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Warranty).ToList();
                                            foreach (var item in warrantyList)
                                            {
                                                <tr>
                                                    <td>@item.ItemName </td>
                                                    <td>@item.ItemDescription</td>
                                                    <td>@item.InternalRefrenceCode</td>
                                                    <td>@item.QuantityRequired</td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>

                            @{
                                if (Code_C_Buyer == currentCompanyType)
                                {
                                    <button class="btn btn-default waves-effect m-r-20" type="button" data-target="#priceCompareModal" data-toggle="modal">Price Comparison</button>
                                }
                            }


                            <div tabindex="-1" class="modal fade in" id="priceCompareModal" role="dialog" aria-labelledby="priceCompareModalLabel" aria-hidden="true">

                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="largeModalLabel">Price Comparison</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-striped">
                                                    <thead>
                                                        <tr>
                                                            <td></td>
                                                            @{
                                                                if (Model.RfqPriceSchedule != null)
                                                                {
                                                                    foreach (var item in Model.RfqPriceSchedule)
                                                                    {
                                                                        <td>@item.ItemName</td>
                                                                    }
                                                                }
                                                            }
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @{
                                                            if (Model.PriceComparison != null)
                                                            {
                                                                foreach (var item in Model.PriceComparison)
                                                                {
                                                                    <tr>
                                                                        @{
                                                                            foreach (var subitem in item)
                                                                            {
                                                                                <td>@subitem</td>
                                                                            }
                                                                        }
                                                                    </tr>
                                                                }
                                                            }
                                                        }
                                                </table>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-link waves-effect" type="button" data-dismiss="modal">CLOSE</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="invited_suppliers">
                            <div class="row">
                                <div class="col-sm-3">
                                    <select id="ddlIndustry" class="form-control selectpicker" disabled></select>
                                    <input type="hidden" asp-for="IndustryOfRfq" id="hdIndustry" />
                                </div>
                                <div class="col-sm-8">
                                    @*<select id="ddlServiceTags" class="form-control"></select>*@
                                    <select asp-for="SelectedTags" class="form-control show-tick" id="ddlServiceTags" data-live-search="true" multiple disabled></select>
                                    <input type="hidden" value="@Model.SelectedTags" id="hdSelectedTags" />
                                </div>
                                <div class="col-sm-1">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    @{
                                        string selectedSuppliers = string.Join(",", Model.InvitedSupplier.Select(m => m.Company_Id).ToArray());
                                    }
                                    <input type="hidden" id="hdSelectedSuppliers" value="@selectedSuppliers" />

                                </div>
                            </div>
                            <table id="invitedSupplierTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="95%">Supplier Information</th>
                                        <th width="*">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                            <div class="row">
                                <div class="pagination" style="padding:10px;">

                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="attachments">

                            <table id="attachmentTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">File Name</th>
                                        <th width="70%">Description</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.Attachment != null)
                                        {

                                            foreach (var item in Model.Document.Attachment)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="#" class="btn_download" data-fileid="@item.Id">@item.FileName</a>
                                                    </td>
                                                    <td>@item.Description</td>
                                                </tr>

                                            }
                                        }
                                    }
                                </tbody>

                            </table>
                            <iframe id="iframe_download_file" style="display:none" src=""></iframe>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="settings">


                            <table id="userSettingTable" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th width="95%">Accessible User(s)</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.DocumentUserDisplay != null)
                                        {
                                            foreach (var item in Model.Document.DocumentUserDisplay)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name='documentUserId[]' value="@item.User_Id" />
                                                        <h5>@item.UserName</h5>
                                                        <input type='hidden' name='documentUserRole[]' value='@item.Roles_Id' />
                                                        @{
                                                            foreach (string tmpRole in item.Roles)
                                                            {

                                                                <span class='label bg-deep-purple'>@tmpRole</span>
                                                            }
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                            <br />
                            <table id="reqEmailInvitesTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="30%">Name</th>
                                        <th width="50%">Email Address</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="rfqEmailInvites">
                                    @{
                                        if (Model.RfqEmailInvites != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.RfqEmailInvites)
                                            {
                                                <tr>
                                                    <td> @item.Name </td>
                                                    <td> @item.EmailAddress </td>
                                                    <td>
                                                        @{
                                                            if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_RFQ_Open)
                                                            {
                                                                <input type="button" class='btn btn-primary' value="Resend" onclick="ResendEmail('@item.EmailAddress')">
                                                            }
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            @{
                                if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_RFQ_Open)
                                {
                                    <div>
                                        <br />
                                        <button type="button" data-toggle="modal" data-target="#resendEmailModal" id="btnEmailInvite" class="btn btn-primary">Email Invite</button>
                                    </div>
                                }
                            }
                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="DocumentActivity">

                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Action</th>
                                        <th width="35%">Created By</th>
                                        <th width="20%">Created Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.DocumentActivityList != null)
                                        {

                                            foreach (var item in Model.Document.DocumentActivityList)
                                            {
                                                <tr>
                                                    <td>@item.Action </td>
                                                    <td>@item.CreatedBy</td>
                                                    <td>@item.CreatedDate</td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{
        if (Code_C_Buyer == currentCompanyType)
        {
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                Quotation List
                            </h2>
                        </div>
                        <div class="body">

                            <div class="row clearfix">
                                <table class="table table-striped" id="tbQuotation">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Document No</th>
                                            <th>Company</th>
                                            <th>Status</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
