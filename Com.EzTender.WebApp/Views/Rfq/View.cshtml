                                        {
                                            var productList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Product).ToList();
                                            foreach (var item in productList)
                                            {
                                                <tr>
                                                    <td>@countPrice</td>
                                                    <td>@item.ItemName </td>
                                                    <td>@item.ItemDescription</td>
                                                    @*<td>@item.InternalRefrenceCode</td>*@
                                                    <td>@item.QuantityRequired</td>
