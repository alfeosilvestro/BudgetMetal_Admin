                                                            foreach (string tmpRole in item.Roles)
                                                            {

                                                                <span class='label bg-deep-purple'>@tmpRole</span>
                                                            }
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                            <br />
                            <table id="reqEmailInvitesTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="30%">Name</th>
                                        <th width="50%">Email Address</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="rfqEmailInvites">
                                    @{
                                        if (Model.RfqEmailInvites != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.RfqEmailInvites)
                                            {
                                                <tr>
                                                    <td> @item.Name </td>
                                                    <td> @item.EmailAddress </td>
                                                    <td>
                                                        @{
                                                            if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_RFQ_Open)
                                                            {
                                                                <input type="button" class='btn btn-primary' value="Resend" onclick="ResendEmail('@item.EmailAddress')">
                                                            }
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                            @{
                                if (Model.Document.DocumentStatus_Id == Com.BudgetMetal.Common.Constants_CodeTable.Code_RFQ_Open)
                                {
                                    <div>
                                        <br />
                                        <button type="button" data-toggle="modal" data-target="#resendEmailModal" id="btnEmailInvite" class="btn btn-primary">Email Invite</button>
                                    </div>
                                }
                            }
                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="DocumentActivity">

                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Action</th>
                                        <th width="35%">Created By</th>
                                        <th width="20%">Created Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.DocumentActivityList != null)
                                        {

                                            foreach (var item in Model.Document.DocumentActivityList)
                                            {
                                                <tr>
                                                    <td>@item.Action </td>
                                                    <td>@item.CreatedBy</td>
                                                    <td>@item.CreatedDate</td>
                                                </tr>
                                            }
                                        }
                                    }

                                </tbody>

                            </table>

                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
    @{
        if (Code_C_Buyer == currentCompanyType)
        {
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <div class="row">
                                <div class="col-sm-4">
                                    <h2>
                                        Quotation List
                                        <button class="btn btn-default waves-effect m-r-20 pull-right" id="btnCompare" type="button">Comparison</button>
                                    </h2>
                                </div>
                                <div class="col-sm-5">

                                </div>
                            </div>

                        </div>
