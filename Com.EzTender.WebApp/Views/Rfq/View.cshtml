                            <div class="row clearfix">
                                <table class="table table-striped" id="tbQuotation">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Document No</th>
                                            <th>Company</th>
                                            <th>Status</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                                <div class="row" id="pagination">
                                    <div class="col-sm-12" id="divPagination">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
