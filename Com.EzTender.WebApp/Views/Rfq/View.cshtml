                                            }
                                        }
                                    }

                                </tbody>

                            </table>
                            @{
                                if (Code_C_Buyer == currentCompanyType)
                                {
                                    <button class="btn btn-default waves-effect m-r-20" type="button" id="btnCompareRequirement">Requirement Comparison</button>
                                }
                            }


                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="service_level_agreement">
                            <table id="slaTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="5%">Serial</th>
                                        <th width="40%">Service Name</th>
                                        <th width="50%">Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int countSla = 1;
                                        if (Model.Sla != null)
