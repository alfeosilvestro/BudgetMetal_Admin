@model Com.BudgetMetal.ViewModels.Rfq.VmRfqItem

@{
    ViewData["Title"] = "Revise";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-controller="Rfq" asp-action="Revise" method="post" enctype="multipart/form-data" id="frmCreateRFQ">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="block-header">
        <h2>Prepare Request for Quotation</h2>
    </div>
    <!-- Input -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        General Information
                    </h2>
                </div>
                <div class="body">

                    <div class="row clearfix">
                        <div class="col-sm-4">
                            <label for="quote_no">RFQ Reference</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Document.DocumentNo" readonly class="form-control" placeholder="<Auto Generate by System>">
                                    <input type="hidden" asp-for="Document.DocumentStatus_Id" value="@(Com.BudgetMetal.Common.Constants_CodeTable.Code_RFQ_Draft)">
                                    <input type="hidden" asp-for="Document.DocumentType_Id" value="@(Com.BudgetMetal.Common.Constants_CodeTable.Code_RFQ)">
                                    <input type="hidden" asp-for="Document.Company_Id" value="@ViewBag.Company_Id">
                                    <input type="hidden" asp-for="Document.CreatedBy" value="@ViewBag.UserName">
                                    <input type="hidden" asp-for="Document.UpdatedBy" value="@ViewBag.UserName">
                                    <input type="hidden" asp-for="CreatedBy" value="@ViewBag.UserName">
                                    <input type="hidden" asp-for="UpdatedBy" value="@ViewBag.UserName">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="quote_no">Title</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="Document.Title" class="form-control" placeholder="Project Title" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <label for="status">Status</label>
                            <h4><span class="label label-info">@Model.Document.DocumentStatus.Name</span></h4>
                        </div>
                        <div class="col-sm-6">
                            <label for="quote_no">Internal Reference No</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="InternalRefrenceNo" class="form-control" placeholder="Internal Reference">
                                    <span asp-validation-for="InternalRefrenceNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="quote_no">Internal Project Name</label>
                            <div class="form-group">
                                <div class="form-line">
                                    <input type="text" asp-for="InternalProjectName" class="form-control" placeholder="Internal Project Name">
                                    <span asp-validation-for="InternalProjectName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- #END# Input -->
    <!-- Tabs -->
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation" class="active"><a href="#basic_requirements" data-toggle="tab">Info</a></li>
                        <li role="presentation"><a href="#detailed_requirements" data-toggle="tab">Requirements</a></li>
                        <li role="presentation"><a href="#service_level_agreement" data-toggle="tab">Supports</a></li>
                        <li role="presentation"><a href="#penalty" data-toggle="tab">Commercials</a></li>
                        <li role="presentation"><a href="#pricing" data-toggle="tab">Pricing</a></li>
                        <li role="presentation"><a href="#attachments" data-toggle="tab">Attachments</a></li>
                        <li role="presentation"><a href="#settings" data-toggle="tab">Roles</a></li>
                        <li role="presentation" id="tabinvited_suppliers"><a href="#invited_suppliers" data-toggle="tab">Invited Supplier</a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="basic_requirements">

                            <div class="row clearfix">
                                <div class="col-sm-3">
                                    <label for="StartRfqdate">Start RFQ Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="StartRfqdate" class="form-control datepicker" placeholder="Start RFQ Date">
                                            <span asp-validation-for="StartRfqdate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <label for="ValidRfqdate">Valid RFQ Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="ValidRfqdate" class="form-control datepicker" placeholder="End RFQ Date">
                                            <span asp-validation-for="ValidRfqdate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <label for="quote_no">Estimated Project Start Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="EstimatedProjectStartDate" class="form-control datepicker" placeholder="Start of Project Delivery">
                                            <span asp-validation-for="EstimatedProjectStartDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <label for="EstimatedProjectEndDate">Estimated Project End Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="EstimatedProjectEndDate" class="form-control datepicker" placeholder="End of Project Delivery">
                                            <span asp-validation-for="EstimatedProjectEndDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-3">
                                    <label for="QuotationOpeningDate">Quotation Opening Date</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="QuotationOpeningDate" class="form-control datepicker" placeholder="Quotation Opening Date">
                                            <span asp-validation-for="QuotationOpeningDate" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <label for="quote_no">Contract Value</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" asp-for="ContractValue" class="form-control" placeholder="Contract Value">
                                            <span asp-validation-for="ContractValue" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                @*<div class="col-sm-3">
                                        <input type="checkbox" asp-for="SupplierProvideMaterial" class="chk-col-red" />
                                        <label for="SupplierProvideMaterial">Supplier to Provide Materials</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="checkbox" asp-for="SupplierProvideTransport" class="chk-col-red" />
                                        <label for="SupplierProvideTransport">Supplier to Provide Transport</label>
                                    </div>*@
                                <div class="col-sm-3">
                                    <input type="checkbox" asp-for="IsPublic" class="chk-col-red" />
                                    <label for="IsPublic">Public</label>
                                </div>
                                <div class="col-sm-3">
                                    <input type="checkbox" asp-for="SupplierProvideInstallationService" class="chk-col-red" />
                                    <label for="SupplierProvideInstallationService">Supplier Provide Installation Service</label>
                                </div>
                                <div class="col-sm-6">
                                    &nbsp;
                                </div>

                                <div class="col-sm-12">
                                    <label for="quote_no">Messages to Suppliers</label>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <textarea rows="3" asp-for="MessageToSupplier" placeholder="Messages to Suppliers" class="form-control no-resize"></textarea>
                                            <span asp-validation-for="MessageToSupplier" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="detailed_requirements">
                            <input type="hidden" id="detailRequirementLastId" value="@Model.Requirement.Count" />
                            <table id="requirementsTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="30%">Service Name</th>
                                        <th width="50%">Description</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Requirement != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.Requirement)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="text" name="Requirement[@i].ServiceName" class="form-control" value="@item.ServiceName" />
                                                    </td>
                                                    <td>
                                                        <input type="text" name="Requirement[@i].Description" class="form-control" value="@item.Description" />
                                                    </td>

                                                    <td><button type="button" class="btn btn-danger waves-effect" onclick='RemoveRequirementRow(this)'>Remove</button></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>

                            </table>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnNewRequirement"> Add Requirement </a>
                                </div>

                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="service_level_agreement">
                            <input type="hidden" id="detailSLALastId" value="@Model.Sla.Count" />
                            <table id="slaTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="30%">Service Name</th>
                                        <th width="65%">Description</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Sla != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.Sla)
                                            {
                                                <tr>
                                                    <td><input type="text" name="Sla[@i].Requirement" class="form-control" value="@item.Requirement" /></td>
                                                    <td><input type="text" name="Sla[@i].Description" class="form-control" value="@item.Description" /></td>
                                                    <td><button type="button" class="btn btn-danger waves-effect" onclick='RemoveSLARow(this)'>Remove</button></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnNewSLA"> Add SLA </a>
                                </div>

                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade in" id="penalty">
                            <input type="hidden" id="PenaltyLastId" value="@Model.Penalty.Count" />
                            <table id="penaltyTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="30%">Service Name</th>
                                        @*<th width="20%">Milestone</th>*@
                                        <th width="45%">Description</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Penalty != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.Penalty)
                                            {
                                                <tr>
                                                    <td><input type="text" name="Penalty[@i].BreachOfServiceDefinition" class="form-control" value="@item.BreachOfServiceDefinition" /></td>
                                                    @*<td><input type="text" name="Penalty[@i].PenaltyAmount" class="form-control" value="@item.PenaltyAmount" /></td>*@
                                                    <td><input type="text" name="Penalty[@i].Description" class="form-control" value="@item.Description" /></td>
                                                    <td><button type="button" class="btn btn-danger waves-effect" onclick='RemovePenaltyRow(this)'>Remove</button></td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>

                            </table>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnNewPenalty"> Add Terms </a>
                                </div>

                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane fade in" id="pricing">
                            <input type="hidden" id="PricingLastId" value="@Model.RfqPriceSchedule.Count" />
                            @{int j = 0;}
                            <table id="pricingTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        <th width="20%">Internal Reference Code</th>
                                        <th width="10%">Quantity</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody id="pricingTableTableBody">
                                    @{
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            int i = j;
                                            var productList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Product).ToList();
                                            foreach (var item in productList)
                                            {
                                                <tr>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].ItemName" class="form-control" value="@item.ItemName" /> </td>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].ItemDescription" class="form-control" value="@item.ItemDescription" /></td>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].InternalRefrenceCode" class="form-control" value="@item.InternalRefrenceCode" /></td>
                                                    <td>
                                                        <input type="text" name="RfqPriceSchedule[@i].QuantityRequired" class="form-control" value="@item.QuantityRequired" />
                                                        <input type="hidden" name="RfqPriceSchedule[@i].CategoryId" value="@(Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Product)" class="form-control" />
                                                    </td>
                                                    <td><button type="button" class="btn btn-danger waves-effect" onclick='RemovePricingRow(this)'>Remove</button></td>
                                                </tr>
                                                i++;
                                            }
                                            j = i;
                                        }
                                    }

                                </tbody>
                            </table>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnNewPricing"> Add Pricing </a>
                                </div>
                            </div>

                            <table id="pricingServiceTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        <th width="20%">Internal Reference Code</th>
                                        <th width="10%">Quantity</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody id="pricingServiceTableBody">
                                    @{

                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            int i = j;
                                            var serviceList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Service).ToList();
                                            foreach (var item in serviceList)
                                            {
                                                <tr>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].ItemName" class="form-control" value="@item.ItemName" /> </td>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].ItemDescription" class="form-control" value="@item.ItemDescription" /></td>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].InternalRefrenceCode" class="form-control" value="@item.InternalRefrenceCode" /></td>
                                                    <td>
                                                        <input type="text" name="RfqPriceSchedule[@i].QuantityRequired" class="form-control" value="@item.QuantityRequired" />
                                                        <input type="hidden" name="RfqPriceSchedule[@i].CategoryId" value="@(Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Service)" class="form-control" />
                                                    </td>
                                                    <td><button type="button" class="btn btn-danger waves-effect" onclick='RemovePricingRow(this)'>Remove</button></td>
                                                </tr>
                                                i++;
                                            }
                                            j = i;
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnServicePricing"> Add Service Pricing </a>
                                </div>
                            </div>

                            <table id="pricingWarrantyTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">Item Name</th>
                                        <th width="35%">Item Description</th>
                                        <th width="20%">Internal Reference Code</th>
                                        <th width="10%">Quantity</th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody id="pricingWarrantyTableBody">
                                    @{
                                        if (Model.RfqPriceSchedule != null)
                                        {
                                            int i = j;
                                            var warrantyList = Model.RfqPriceSchedule.Where(x => x.CategoryId == Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Warranty).ToList();
                                            foreach (var item in warrantyList)
                                            {
                                                <tr>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].ItemName" class="form-control" value="@item.ItemName" /> </td>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].ItemDescription" class="form-control" value="@item.ItemDescription" /></td>
                                                    <td><input type="text" name="RfqPriceSchedule[@i].InternalRefrenceCode" class="form-control" value="@item.InternalRefrenceCode" /></td>
                                                    <td>
                                                        <input type="text" name="RfqPriceSchedule[@i].QuantityRequired" class="form-control" value="@item.QuantityRequired" />
                                                        <input type="hidden" name="RfqPriceSchedule[@i].CategoryId" value="@(Com.BudgetMetal.Common.Constants_CodeTable.Code_RfqPriceCategory_Warranty)" class="form-control" />
                                                    </td>
                                                    <td><button type="button" class="btn btn-danger waves-effect" onclick='RemovePricingRow(this)'>Remove</button></td>
                                                </tr>
                                                i++;
                                            }
                                            j = i;
                                        }
                                    }
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnWarrantyPricing"> Add Warranty Pricing </a>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="invited_suppliers">
                            <div class="row">
                                <div class="col-sm-3">
                                    <select id="ddlIndustry" class="form-control selectpicker"></select>
                                    <input type="hidden" asp-for="IndustryOfRfq" id="hdIndustry" />
                                </div>
                                <div class="col-sm-8">
                                    @*<select id="ddlServiceTags" class="form-control"></select>*@
                                    <select asp-for="SelectedTags" class="form-control show-tick" id="ddlServiceTags" data-live-search="true" multiple></select>
                                    <input type="hidden" value="@Model.SelectedTags" id="hdSelectedTags" />
                                </div>
                                <div class="col-sm-1">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="txtSearchSupplier" id="txtSearchSupplier" class="form-control" placeholder="Supplier Name, UEN">

                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    @{
                                        string selectedSuppliers = string.Join(",", Model.InvitedSupplier.Select(m => m.Company_Id).ToArray());
                                    }
                                    <input type="hidden" id="hdSelectedSuppliers" value="@selectedSuppliers" />
                                    <a class="btn btn-success" id="btnLoadSupplier">Search Supplier</a>
                                </div>
                            </div>
                            <table id="invitedSupplierTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="95%">Supplier Information</th>
                                        <th width="*">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                            <div class="row">
                                <div class="pagination" style="padding:10px;">

                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="attachments">

                            <table id="attachmentTable" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th width="25%">File Name</th>
                                        <th width="70%">Description</th>
                                        <th width="*">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                </tbody>

                            </table>
                            <iframe id="iframe_download_file" style="display:none" src=""></iframe>
                            <div class="row">
                                <div class="form-group col-sm-12">
                                    <a class="btn btn-success" id="btnNewFile"> Add Attachment </a>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane fade" id="settings">
                            <div class="row">
                                <div class="col-sm-5">
                                    <select id="ddlUser" class="form-control selectpicker"></select>
                                </div>
                                <div class="col-sm-5">
                                    <select class="form-control show-tick" id="ddlRole" data-live-search="true" multiple></select>
                                </div>
                                <div class="col-sm-2">
                                    <a id="btnAddUser" class="btn btn-success">Add</a>
                                </div>
                            </div>

                            <table id="userSettingTable" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th width="95%">Accessible User(s)</th>
                                        <th width="*">&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Model.Document.DocumentUserDisplay != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.Document.DocumentUserDisplay)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="hidden" name='documentUserId[]' value="@item.User_Id" />
                                                        <h5>@item.UserName</h5>
                                                        <input type='hidden' name='documentUserRole[]' value='@item.Roles_Id' />
                                                        @{
                                                            foreach (string tmpRole in item.Roles)
                                                            {

                                                                <span class='label bg-deep-purple'>@tmpRole</span>
                                                            }
                                                        }

                                                    </td>

                                                    <td>
                                                        @{
                                                            if (i > 0)
                                                            {
                                                                <button type="button" class="btn btn-danger waves-effect" onclick='RemoveUserRow(this)'>Remove</button>
                                                            }
                                                        }
                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }

                                </tbody>
                            </table>

                            <div id="rfq_Email_Invites">
                                <input type="hidden" id="detailEmalsInviteLastId" value="@Model.RfqEmailInvites.Count" />
                                <table id="reqEmailInvitesTable" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th width="30%">Name</th>
                                            <th width="50%">Email Address</th>
                                            <th>&nbsp;</th>
                                        </tr>
                                    </thead>
                                    <tbody id="rfqEmailInvites">
                                        @{
                                            if (Model.RfqEmailInvites != null)
                                            {
                                                int i = 0;
                                                foreach (var item in Model.RfqEmailInvites)
                                                {
                                                    <tr>
                                                        <td><input type="text" name="RfqEmailInvites[@i].Name" class="form-control" value="@item.Name" /></td>
                                                        <td><input type="text" name="RfqEmailInvites[@i].EmailAddress" class="form-control" value="@item.EmailAddress" /></td>
                                                        <td><button type="button" class="btn btn-danger waves-effect" onclick='RemoveRfqEmailInvites(this)'>Remove</button></td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>

                                </table>
                                <div class="row">
                                    <div class="form-group col-sm-12">
                                        <a class="btn btn-success" id="btnRfqEmailsInvites"> New Email Invite </a>
                                    </div>

                                </div>
                            </div>
                        </div>

                        
