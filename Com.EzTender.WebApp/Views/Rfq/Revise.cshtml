    function loadServiceTags(industryId) {
        var industryId = $('#ddlIndustry').val();
        //alert(industryId);
        $('#ddlServiceTags').empty();
        if (industryId == "0") {

            $("#ddlServiceTags").selectpicker('refresh');
        } else {
            $('#hdIndustry').val($("#ddlIndustry option:selected").val());
            //alert($('#hdIndustry').val())
            var ajaxurl = '@Url.Action("GetServiceTagByIndustry", "Rfq")';

            $.ajax({
                url: ajaxurl,
                data: {Id: industryId},
                dataType: 'json',
                success: function (response) {
                    //console.log(response);
                    var obj = response;
                    for (var k in obj) {
                        var item = obj[k];
                        var selected = "";
                        var selectedTags = $("#hdSelectedTags").val();
                        //alert(selectedTags);
                        var array = selectedTags.split(',');
                        array.forEach(function (i) {
                            if (i == item.Id) {
                                selected = "selected";
                            }
                        });


                        var tmpstring = "<option value='" + item.Id + "' " + selected + ">" + item.Name + "</option>"
                        $('#ddlServiceTags').append(tmpstring);
                    }

                    $("#ddlServiceTags").selectpicker('refresh');
                    $("#hdSelectedTags").val("0");
                    if ($("#loadinvitedsupplier").val() == "0") {
                        loadSupplier(1);
                        $("#loadinvitedsupplier").val("1");
                    }
                },
                error: function (response) {
                    alert(response)
                }
            });
        }
    }

