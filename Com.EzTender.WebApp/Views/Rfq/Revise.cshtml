    function loadSupplier(page) {

     var serviceTagsId = $('#ddlServiceTags').val();
        var searchSupplier = $('#txtSearchSupplier').val();
     var stringServiceTagsId = serviceTagsId.toString();

     if (serviceTagsId == null) {
            alert("Please select the service tags!")
        } else {
            var ajaxurl = '@Url.Action("GetSupplierByServiceTagsId", "Rfq")';
            $.ajax({
                url: ajaxurl,
                data: { serviceTagsId: stringServiceTagsId, page: page, searchKeyword: searchSupplier },
                dataType: 'json',
                success: function (response) {
                    var obj = response.Result.Records;
                    for (var k in obj) {
                        var item = obj[k];
                        var selected = "";
                        var selectedClass = "btn-danger";
                        var invited = "Select";
                        var invitedSupplier = $("#hdSelectedSuppliers").val();

                        var array = invitedSupplier.split(',');
                        array.forEach(function (i) {
                            if (i == item.Id) {
                                selected = "checked='checked'";
                                selectedClass = "btn-success";
                                invited = "Selected";
                            }
                        });

                        var verifyBadge = "<span class='label label-danger'>Unverified</span>";
                        if (item.IsVerified) {
                            verifyBadge = "<span class='label label-success'>Verified</span>";
                        }
                        $('#invitedSupplierTable > tbody').append(
                            "<tr>" +
                            "<td> <h5>" + item.Name + "</h5>" + verifyBadge +
                            " <p class='m-t-15 m-b-30'>" + item.About + "</p></td>" +
                            "<td><input type='checkbox' class='filled-in supplier' id='chkSupplier_" + item.Id + "'  name='supplier_list' value='" + item.Id + "' " + selected + "> <button type='button' id='btnInvite_" + item.Id + "' class='btn " + selectedClass +"' onclick='checkSupplier(" + item.Id + ")'>"+invited+"</button></td>" +
                            "</tr>");

                    }
                    $("#hdSelectedSuppliers").val("0");
                    var totalpage = response.Result.TotalPage;
                    var currentpage = response.Result.CurrentPage;
                    if (totalpage > currentpage) {
                        $(".pagination").empty();
                        $(".pagination").append(" <a class='btn btn-md btn-default' OnClick='loadSupplier(" + response.Result.NextPage + ")'> Load More </a> ");
                    } else {
                        $(".pagination").empty();
                    }
                },
                error: function (response) {
                    alert(response)
                }
            });
     }

    }

    function checkSupplier(n) {

        if ($("#chkSupplier_" + n).prop("checked")) {

            $("#chkSupplier_" + n).prop("checked", false);
            $("#btnInvite_" + n).removeClass("btn btn-success").addClass("btn btn-danger");
            $("#btnInvite_" + n).text("Select");
        } else {
            $("#chkSupplier_" + n).prop("checked", true);
            $("#btnInvite_" + n).removeClass("btn btn-danger").addClass("btn btn-success");
            $("#btnInvite_" + n).text("Selected");
        }
        var selectedSupplier = "";
        $('input[name="supplier_list"]:checked').each(function () {
            if (selectedSupplier == "") {
                selectedSupplier = this.value;
            } else {
                selectedSupplier = selectedSupplier + "," + this.value;
            }
        });
        console.log(selectedSupplier);
        $("#hdSelectedSuppliers").val(selectedSupplier);
    }
