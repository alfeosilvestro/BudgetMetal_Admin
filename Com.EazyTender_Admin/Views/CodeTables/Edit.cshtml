@model Com.BudgetMetal.ViewModels.CodeTable.VmCodeTableItem

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="row"></div>
        <h3>Edit Code Table</h3>
        <hr />
        <div class="row clearfix">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>*@
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="Value" class="control-label"></label>
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="CodeCategory_Id" class="control-label">Code Category</label>
                        <select asp-for="CodeCategory_Id" onchange="onFormSelected(this.value)" asp-items="@(new SelectList(Model.CodeCategoryList, "Id", "Name", Model.CodeCategory_Id))" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="CodeCategory_Id" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="UpdatedBy" class="control-label"></label>
                        <input asp-for="UpdatedBy" class="form-control" />
                        <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <br />
                        <div class="checkbox">
                            <input type="checkbox" class="chk-col-red" asp-for="IsActive" />
                            <label for="IsActive"> Is Active</label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="UpdatedBy" class="form-control" />
                    <div class="form-group col-md-8">
                        <br />
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
