@model Com.BudgetMetal.ViewModels.CodeTable.VmCodeTableItem

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Code Table</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodeCategory_Id" class="control-label">Code Category</label>
                <select asp-for="CodeCategory_Id" asp-items="@(new SelectList(Model.CodeCategoryList, "Id", "Name"))" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="CodeCategory_Id" class="text-danger"></span>
            </div>
                
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
