@model Com.BudgetMetal.ViewModels.Company.VmCompanyItem

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid">
    <h3>Create Company</h3>
    <div class="card">
        <div class="row"></div>
        <div class="row clearfix">
            <div class="col-md-8">
                <div class="card-panel">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-line col-md-8" hidden="hidden">
                            <br />
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-line col-md-8">
                            <br />
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-line col-md-8">
                            <br />
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-line col-md-8">
                            <br />
                            <label asp-for="Domain" class="control-label"></label>
                            <input asp-for="Domain" class="form-control" />
                            <span asp-validation-for="Domain" class="text-danger"></span>
                        </div>
                        <div class="form-line col-md-8">
                            <br />
                            <label asp-for="RegNo" class="control-label"></label>
                            <input asp-for="RegNo" class="form-control" />
                            <span asp-validation-for="RegNo" class="text-danger"></span>
                        </div>
                        <div class="form-line col-md-8">
                            <br />
                            <label asp-for="About" class="control-label"></label>
                            <input asp-for="About" class="form-control" />
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="CreatedBy" class="form-control" />
                        <div class="form-group col-md-8">
                            <br />
                            <input type="submit" value="Create" class="btn btn-info" />
                        </div>
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
