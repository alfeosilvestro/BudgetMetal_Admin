@model Com.BudgetMetal.ViewModels.Rfq.VmRfqItem

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>VmRfqItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InternalRefrenceNo" class="control-label">Internal Refrence No</label>
                <input asp-for="InternalRefrenceNo" class="form-control" />
                <span asp-validation-for="InternalRefrenceNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InternalProjectName" class="control-label">InternalProject Name</label>
                <input asp-for="InternalProjectName" class="form-control" />
                <span asp-validation-for="InternalProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartRfqdate" class="control-label">Start Date</label>
                <input asp-for="StartRfqdate" class="form-control" />
                <span asp-validation-for="StartRfqdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidRfqdate" class="control-label">Valid Date</label>
                <input asp-for="ValidRfqdate" class="form-control" />
                <span asp-validation-for="ValidRfqdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedProjectStartDate" class="control-label">Estimated Project Start Date</label>
                <input asp-for="EstimatedProjectStartDate" class="form-control" />
                <span asp-validation-for="EstimatedProjectStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstimatedProjectEndDate" class="control-label">Estimated Project EndDate</label>
                <input asp-for="EstimatedProjectEndDate" class="form-control" />
                <span asp-validation-for="EstimatedProjectEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SupplierProvideMaterial" /> @Html.DisplayNameFor(model => model.SupplierProvideMaterial)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="SupplierProvideTransport" /> @Html.DisplayNameFor(model => model.SupplierProvideTransport)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MessageToSupplier" class="control-label">Message To Supplier</label>
                <input asp-for="MessageToSupplier" class="form-control" />
                <span asp-validation-for="MessageToSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndustryOfRfq" class="control-label">Industry Of Rfq</label>
                <input asp-for="IndustryOfRfq" class="form-control" />
                <span asp-validation-for="IndustryOfRfq" class="text-danger"></span>
            </div>
