@model Com.BudgetMetal.ViewModels.User.VmUserItem

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container-fluid">
    <h3>Edit Users</h3>
    <div class="card">
        <div class="row"></div>
        <div class="row clearfix">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="ContactName" class="control-label"></label>
                        <input asp-for="ContactName" class="form-control" />
                        <span asp-validation-for="ContactName" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="JobTitle" class="control-label"></label>
                        <input asp-for="JobTitle" class="form-control" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="ContactNumber" class="control-label"></label>
                        <input asp-for="ContactNumber" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                            <label asp-for="Company_Id" class="control-label"></label>
                            <input asp-for="Company_Id" class="form-control" />
                            <span asp-validation-for="Company_Id" class="text-danger"></span>
                        </div>*@
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="Company_Id" class="control-label">Company</label>
                        <select asp-for="Company_Id" asp-items="@(new SelectList(Model.CompanyList, "Id", "Name"))" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="Company_Id" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                            <label asp-for="UserType" class="control-label"></label>
                            <input asp-for="UserType" class="form-control" />
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>*@
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="UserType" class="control-label">User Type</label>
                        <select asp-for="UserType" asp-items="@(new SelectList(Model.CodeTableList, "Id", "Name"))" class="form-control">
                            <option>Please select one</option>
                        </select>
                        <span asp-validation-for="UserType" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8" hidden="hidden">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8" hidden="hidden">
                        <label asp-for="UpdatedBy" class="control-label"></label>
                        <input asp-for="UpdatedBy" class="form-control" />
                        <span asp-validation-for="UpdatedBy" class="text-danger"></span>
                    </div>
                    <div class="form-line col-md-8">
                        <br />
                        <label asp-for="RoleList" class="control-label">Roles</label>
                        @*<select multiple="multiple" id="RoleList" name="RoleList" asp-items="@(new MultiSelectList(Model.RoleList, "Id", "Name", new[] { 1, 2}))" class="form-control">
                                <option>Please select</option>
                            </select>*@
                        <select multiple="multiple" id="RoleList" name="RoleList" asp-items="@(new MultiSelectList(Model.RoleList, "Id", "Name", Model.SelectedRoleId.ToArray()))" class="form-control">
                            <option>Please select</option>
                        </select>
                        <span asp-validation-for="RoleList" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <br />
                        <div class="checkbox">
                            <input type="checkbox" class="chk-col-red" asp-for="IsConfirmed" />
                            <label for="IsConfirmed"> Is Confirmed</label>
                        </div>
                        <br />
                        <div class="checkbox">
                            <input type="checkbox" class="chk-col-red" asp-for="IsActive" />
                            <label for="IsActive"> Is Active</label>
                        </div>
                    </div>
                    <input type="hidden" asp-for="UpdatedBy" class="form-control" />
                    <div class="form-group col-md-8">
                        <input type="submit" value="Save" class="btn btn-info" />
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
    <br />
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Select Plugin Js -->
<script src="~/material_theme/plugins/bootstrap-select/js/bootstrap-select.js"></script>

<!-- Multi Select Plugin Js -->
<script src="~/material_theme/plugins/multi-select/js/jquery.multi-select.js"></script>