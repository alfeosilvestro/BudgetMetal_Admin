@model Com.BudgetMetal.ViewModels.CodeCategory.VmCodeCategoryItem

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<hr />
<div class="container-fluid">
    <h3>Edit Code Category</h3>
    <div class="card">
        <div class="row clearfix">
            <div class="col-md-8">
                <div class="card-panel">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <br />
                        <div class="form-line col-md-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group col-md-6">
                            <br />
                            <div class="checkbox">
                                <input type="checkbox" class="chk-col-red" asp-for="IsActive" />
                                <label for="IsActive"> Is Active</label>
                            </div>
                        </div>
                        <input type="hidden" asp-for="UpdatedBy" class="form-control" />
                        <div class="form-group col-md-6">
                            <input type="submit" value="Save" class="btn btn-info" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
