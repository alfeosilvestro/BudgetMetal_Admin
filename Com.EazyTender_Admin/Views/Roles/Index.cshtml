@model Com.BudgetMetal.ViewModels.Role.VmRolePage

@{
    ViewData["Title"] = "Index";
}

<h2>Role</h2>
<div class="header">
    <div class="row">
        @using (Html.BeginForm("Index", "Roles", FormMethod.Get))
        {
            <div class="col-sm-5">
                @Html.TextBox("keyword",
                    null,
                    new {
                        id = "search_key",
                        @class = "form-control"
                    })
            </div>
            <div class="col-sm-1">
                <input class="btn btn-info" type="submit" value="Search" />
            </div>
        }
    </div>
</div>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Name@*@Html.DisplayNameFor(model => model.Result.Records[0].Role)*@
            </th>
            <th>
                Code@*@Html.DisplayNameFor(model => model.Result.Records[0].RoleCode)*@
            </th>
            <th><a asp-action="Create">Create New</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Result.Records)
        {
            <tr>
                <td> @item.Name </td>
                <td> @item.Code </td>
                <td hidden="hidden"> @item.Id </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-sm-12">
        <div class="pagination pull-right" style="padding:10px;">
            @{
                int currentPage = Model.Result.CurrentPage;
                int totalPage = Model.Result.TotalPage;
                int previousPage = Model.Result.PreviousPage;
                int nextPage = Model.Result.NextPage;

                int startPage = currentPage - 5;
                int endPage = currentPage + 4;

                if (startPage <= 0)
                {
                    endPage -= (startPage - 1);
                    startPage = 1;
                }
                if (endPage > totalPage)
                {
                    endPage = totalPage;
                    if (endPage > 10)
                    {
                        startPage = endPage - 9;
                    }
                }

                @if (endPage > 1)
                {
                    <ul class="pagination">
                        @if (currentPage > 1)
                        {
                            <li>
                                <a href="~/Documents">First</a>
                            </li>
                            <li>
                                <a href="?page=@(currentPage - 1)">Previous</a>
                            </li>
                        }

                        @for (int page = startPage; page <= endPage; page++)
                        {
                            <li class="@(page == currentPage ? "active" : "")">
                                <a class='btn btn-md btn-default' href="?page=@(page)"> @(page) </a>
                            </li>
                        }

                        @if (currentPage < totalPage)
                        {
                            <li>
                                <a href="?page=@(currentPage + 1)">Next</a>
                            </li>
                            <li>
                                <a href="?page=@(totalPage)">Last</a>
                            </li>
                        }
                    </ul>
                }
            }
        </div>
    </div>
</div>